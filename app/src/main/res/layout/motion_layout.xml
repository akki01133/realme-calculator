<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ch7"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="7"

        app:layout_constraintBottom_toTopOf="@+id/ch4"
        app:layout_constraintEnd_toStartOf="@+id/ch8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/view" />

    <Button
        android:id="@+id/ch8"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="8"

        app:layout_constraintBottom_toBottomOf="@+id/ch7"
        app:layout_constraintEnd_toStartOf="@+id/ch9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch7"
        app:layout_constraintTop_toTopOf="@+id/ch7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ch9"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/ch8"
        app:layout_constraintEnd_toStartOf="@+id/mult"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch8"
        app:layout_constraintTop_toTopOf="@+id/ch8" />

    <Button
        android:id="@+id/mult"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="@+id/ch9"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch9"
        app:layout_constraintTop_toTopOf="@+id/ch9" />


    <Button
        android:id="@+id/ch4"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/ch1"
        app:layout_constraintEnd_toStartOf="@+id/ch5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/view" />

    <Button
        android:id="@+id/ch5"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"

        app:layout_constraintBottom_toBottomOf="@+id/ch4"
        app:layout_constraintEnd_toStartOf="@+id/ch6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch4"
        app:layout_constraintTop_toTopOf="@+id/ch4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ch6"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ch5"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch5"
        app:layout_constraintTop_toTopOf="@+id/ch5" />

    <Button
        android:id="@+id/minus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ch6"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch6"
        app:layout_constraintTop_toTopOf="@+id/ch6" />

    <Button
        android:id="@+id/ch1"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/ch00"
        app:layout_constraintEnd_toStartOf="@+id/ch2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/view" />

    <Button
        android:id="@+id/ch2"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"

        app:layout_constraintBottom_toBottomOf="@+id/ch1"
        app:layout_constraintEnd_toStartOf="@+id/ch3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch1"
        app:layout_constraintTop_toTopOf="@+id/ch1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ch3"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ch2"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch2"
        app:layout_constraintTop_toTopOf="@+id/ch2" />

    <Button
        android:id="@+id/plus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ch3"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch3"
        app:layout_constraintTop_toTopOf="@+id/ch3" />


    <Button
        android:id="@+id/ch00"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/ch0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/view" />

    <Button
        android:id="@+id/ch0"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"

        app:layout_constraintBottom_toBottomOf="@+id/ch00"
        app:layout_constraintEnd_toStartOf="@+id/chdot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch00"
        app:layout_constraintTop_toTopOf="@+id/ch00"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/chdot"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/ch0"
        app:layout_constraintEnd_toStartOf="@+id/chequal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ch0"
        app:layout_constraintTop_toTopOf="@+id/ch0" />

    <Button
        android:id="@+id/chequal"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/buttonback"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/chdot"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chdot"
        app:layout_constraintTop_toTopOf="@+id/chdot" />


</androidx.constraintlayout.widget.ConstraintLayout>
